{% render 'partials/head.liquid', title: 'Squad page' %}
<link rel="stylesheet" href="/bioscoopstyle.css">
<main class="bioscoop">
	<section>
		<article>
			{% include 'partials/calc.liquid' %}
			<div>
				<a href="/">terug</a>
				<img
				class="mugshot"
				src="https://fdnd.directus.app/assets/{{ person.mugshot }}"
				alt="foto van: persoon"
				>
				<p>naam: {{ person.name }}</p>

				<p>leeftijd: {{ age }}</p>
				<form>
				<label>
					rate deze film:
					<input
					type="range"
					name="rate"
					id="rate"
					min="0.5"
					max="5"
					step="0.5"
					value="2.5"
					style="--val: 2.5"
					oninput="this.style='--val:'+this.value"
					>
				</label>
				</form>
			</div>
			<div>
				<h1>favoriete film:</h1>
				<img
				src="/assets/20th_Century_Fox_logo_new.webp"
				width="500"
				height="250"
				alt="foto van 20th centry fox intro"
				>
				<p>{{ person.fav_movie }}</p>
			</div>
			</article>
			<article>
			{% for person in persons %}
				<a href="/bioscoop/{{ person.id }}" class="stoel">
				<p>{{ person.name | split: ' ' | first }}</p>
				<p>{{ person.id }}</p>
				</a>
			{% endfor %}
		</article>
	</section>
</main>
