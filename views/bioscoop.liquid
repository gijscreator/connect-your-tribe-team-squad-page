<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bioscoop</title>
  </head>
  <body>
    <article>
      <section>
        <img src="" alt="">
        <p>naam:</p>
        <p>leeftijd:</p>
        <form>
          <label>
            rate deze film:
            <input
              type="range"
              name="rate"
              id="rate"
              min="0.5"
              max="5"
              step="0.5"
              value="2.5"
              style="--val: 2.5"
              oninput="this.style='--val:'+this.value"
            >
          </label>
        </form>
        <h1>favoriete film:</h1>
        <img src="" alt="">
        <p>{{ person.movie }}</p>
      </section>
      <section>
        {% for person in persons %}
          <button>
            {{ person.name }}
            <br>
            {{ person.id }}
          </button>
        {% endfor %}
      </section>
    </article>
  </body>
</html>
